.squid-table {
  @apply mx-auto my-8;
  @apply table-auto;
  @apply w-4/5;

  & .squid-table__header {
    @apply p-2;
    @apply font-bold;
    @apply text-center;
    @apply bg-blue-50;
    @apply border-b-2;
  }

  & .squid-table__header-refetch {
    @apply text-right;
  }

  & .squid-table__header-button {
    @apply px-4 py-2;
    @apply text-gray-500;
    @apply hover:text-black hover:font-bold;
  }
}
